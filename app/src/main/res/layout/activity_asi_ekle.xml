<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsiEkle">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aşı Kayıt Ekranı"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditTextAsiAdi"
            android:layout_height="wrap_content"
            android:hint="Aşı ID"

            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextHastahane"
            android:layout_height="wrap_content"
            android:hint="Hastahane Adı"

            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextAsiTarihi"
            android:layout_height="wrap_content"
            android:hint="Aşı Tarihi"
            android:inputType="datetime"
            android:layout_width="fill_parent">
        </EditText>
        <Button
            android:id="@+id/ButtonAsiKaydet"
            android:layout_height="wrap_content"
            android:text="Aşı Kaydet"
            android:onClick="btnAsiKaydet"
            android:layout_width="fill_parent">
        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>